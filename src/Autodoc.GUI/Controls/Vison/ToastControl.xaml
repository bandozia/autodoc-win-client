<UserControl x:Class="Autodoc.GUI.Controls.Vison.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autodoc.GUI.Controls.Vison"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#D8283946">
        <Grid>
            <TextBlock x:Name="msgBody" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <iconPacks:PackIconRemixIcon Width="18" Height="18" VerticalAlignment="Top" HorizontalAlignment="Right" Kind="CloseLine" MouseUp="CloseBtMouseUp" />
        </Grid>
    </Border>
</UserControl>
